<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:isScrollContainer="true"
    android:orientation="vertical">
        <bego.com.alqowyy.widget.Tv_noor
            android:id="@+id/sura_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bg_star"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:orientation="vertical">

            <bego.com.alqowyy.widget.Tv_noor

                android:id="@+id/sura_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#F3F4E6"
                android:textSize="16sp" />

            <bego.com.alqowyy.widget.Tv_noor
                android:id="@+id/page_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" />
        </LinearLayout>

        <bego.com.alqowyy.widget.Tv_noor
            android:text="test"
            android:textColor="@color/white"
            android:id="@+id/sura_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right|center_vertical"
            android:textSize="30sp" />
        <TextView
            android:gravity="right|center_vertical"
            android:textColor="@color/white"
            android:id="@+id/surah_id"
            android:textSize="10sp"
            android:layout_below="@id/sura_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</RelativeLayout>
